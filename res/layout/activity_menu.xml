<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.ineo.ping16.MainActivity" >

    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Bienvenue" />

    <Button
        android:id="@+id/Devis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Contact"
        android:layout_alignBottom="@+id/Contact"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="99dp"
        android:text="Devis" />

    <Button
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="93dp"
        android:layout_toRightOf="@+id/Devis"
        android:text="Contacts" />

    <Button
        android:id="@+id/Pointage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Chantier"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/bienvenue"
        android:text="Pointage" />

    <Button
        android:id="@+id/Codis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Chantier"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:text="Codis" />

    <Button
        android:id="@+id/Bdc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Chantier"
        android:layout_marginRight="77dp"
        android:layout_toLeftOf="@+id/Codis"
        android:text="B.D.C" />

    <Button
        android:id="@+id/Chantier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Plan"
        android:layout_marginTop="121dp"
        android:layout_toLeftOf="@+id/Pointage"
        android:text="Chantiers" />

    <Button
        android:id="@+id/Plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Contact"
        android:layout_alignBottom="@+id/Contact"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/bienvenue"
        android:text="Plans" />

</RelativeLayout>